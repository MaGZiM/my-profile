extends ../main-layout

block content
    section.section.hero#start
        .hero__bg
            img(src="assets/img/header-img.jpg", alt="").hero__bg-img

        +socials('vk', 'github-alt', 'linkedin')

        svg.ghost-img-portfolio(preserveAspectRatio="none" viewBox="0 0 1175.495 313.961")
            use(xlink:href="assets/img/svg/portfolio_header.svg#portfolio")

        a(href="#works-up").down-arrow
            svg.down-arrow__icon
                use(xlink:href="assets/img/sprite.svg#arrow_down")

        .user.hero__user-block
            .user__photo.user__photo_gen
                .user__photo-avatar
                    img(src="./assets/img/avas/my-ava.jpg", alt="avatar").user__photo-img
            .user__name Рысухин Максим
            .user__desc Личный сайт веб-разработчика

    include ../parts/works/section-works

    include ../parts/works/feedbacks