include mixins/mixins

doctype html
html
  head
    meta(charset="utf-8" lang="ru")
    title #{title}
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")

    //- favicon block start
    link(rel="shortcut icon" href="assets/img/fav_forest.png" type="image/png")
    //- favicon block end

    link(rel="stylesheet" href=`/assets/css/foundation${suffix}.css${version}`)
    link(rel="stylesheet" href=`/assets/css/main${suffix}.css${version}`)
    script(src="https://code.jquery.com/jquery-2.2.4.min.js")
    script(src='/assets/js/foundation.js' defer)
    script(src='/assets/js/app.js' defer)

    <!--[if lt IE 9]>
    script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
    <![endif]-->

  body
    .global
      include parts/preloader
      input.input-toggler#menuToggler(type="checkbox")
      label.menu-toggler(for="menuToggler")
        span.menu-toggler__line
        span.menu-toggler__line
        span.menu-toggler__line
      .wrapper
        block content
      .slides
        .left-slide
        .right-slide
        include parts/slides-menu
      include parts/footer
      block scripts